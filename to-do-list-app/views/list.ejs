<%- include('header') -%>
    <h2 class="text-center " style="margin-top: 25vh;">To-do List App</h2>
    <div class="container card" style="width: 30rem;">
        <form action="/" method="post">
            <div class="row card-body">
                <div class="col-md-6 form-group">
                    <input type="text" class="form-control" id="taskInput" name="taskInput"
                        placeholder="Enter your task here">
                </div>
                <div class="col-md-6 form-group">
                    <input type="submit" class="btn btn-success" id="exampleInputPassword1" value="Add to List">
                </div>
            </div>
        </form>

        <% for(var name=0;name<newListItems.length;name++){ %>
        <form action="" method="get">
            <div class="row card-body  border m-3 p-2 " style="border-radius: 5px;">
                <div class="col-md-6 text-center">
                 <%= newListItems[name] %>
                </div>
                <div class="col-md-6 d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger " style="border-radius: 25px; opacity:0.95"><i
                            class="fa fa-window-close"></i></button>
                </div>
            </div>
        </form>
<% } %>
    </div>